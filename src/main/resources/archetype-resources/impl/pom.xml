<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <parent>
    <groupId>org.opendaylight.controller</groupId>
    <artifactId>config-parent</artifactId>
    <version>0.4.3-Beryllium-SR3</version>
    <relativePath/>
  </parent>

  <properties>
    <openflowplugin.version>0.2.3-Beryllium-SR3</openflowplugin.version>
    <mdsal.version>1.3.3-Beryllium-SR3</mdsal.version>
  </properties>

  <modelVersion>4.0.0</modelVersion>
  <groupId>fast.app</groupId>
  <artifactId>fast-${artifactId}</artifactId>
  <version>${version}</version>
  <packaging>bundle</packaging>

  <dependencies>
    <dependency>
      <groupId>${symbol_dollar}{project.groupId}</groupId>
      <artifactId>fast-system-api</artifactId>
      <version>${symbol_dollar}{project.version}</version>
    </dependency>

    <dependency>
      <groupId>${symbol_dollar}{project.groupId}</groupId>
      <artifactId>fast-${artifactId}-api</artifactId>
      <version>${symbol_dollar}{project.version}</version>
    </dependency>

    <dependency>
      <groupId>${symbol_dollar}{project.groupId}</groupId>
      <artifactId>fast-topology-simulator-api</artifactId>
      <version>${symbol_dollar}{project.version}</version>
    </dependency>

    <dependency>
      <groupId>org.opendaylight.controller.model</groupId>
      <artifactId>model-topology</artifactId>
      <version>${symbol_dollar}{mdsal.version}</version>
    </dependency>

    <dependency>
      <groupId>org.opendaylight.controller.model</groupId>
      <artifactId>model-inventory</artifactId>
      <type>jar</type>
    </dependency>

    <!-- Testing Dependencies -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-all</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <version>${symbol_dollar}{bundle.plugin.version}</version>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-Version>${symbol_dollar}{project.version}</Bundle-Version>
            <Bundle-Name>${symbol_dollar}{project.groupId}</Bundle-Name>
            <Export-Package>${package}.*;</Export-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
